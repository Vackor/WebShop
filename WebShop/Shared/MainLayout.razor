@code
{
    @*search keyword*@
    string myStringValue;

    @*Theme settings
        - primary color
    *@
    MatTheme theme1 = new MatTheme()
        {
            Primary = "#bcaaa4",
            Secondary = "#bdbdbd"
        };

    public void HomeOnClick(MouseEventArgs e)
    {
        NavManager.NavigateTo("");
    }
}